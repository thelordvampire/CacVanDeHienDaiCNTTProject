<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseThemeLight" parent="@android:style/Theme.Material.Light.NoActionBar">
        <item name="android:colorPrimary">@color/kiss_green</item>
        <item name="android:colorPrimaryDark">@android:color/transparent</item>
        <item name="android:colorAccent">@color/kiss_green</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="BaseThemeDark" parent="@android:style/Theme.Material.NoActionBar">
        <item name="android:colorPrimary">@color/kiss_green</item>
        <item name="android:colorPrimaryDark">@android:color/transparent</item>
        <item name="android:colorAccent">@color/kiss_green</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="SettingTheme" parent="AppThemeLight">
        <item name="android:windowBackground">@color/kiss_background</item>
        <item name="android:textColorSecondary">#7f7f7f</item>
        <item name="android:colorPrimaryDark">@color/kiss_green</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <style name="SettingThemeDark" parent="AppThemeDark">
        <item name="android:windowBackground">@color/kiss_list_background_inverse</item>
        <item name="android:colorPrimaryDark">@color/kiss_green</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>
</resources>
